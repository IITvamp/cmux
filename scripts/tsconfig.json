{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@coderouter/*": ["./packages/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}