{
  "appId": "com.cmux.app",
  "productName": "Cmux",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "out/**/*",
    "package.json"
  ],
  "asar": true,
  "mac": {
    "category": "public.app-category.developer-tools",
    "icon": "build/icon.icns",
    "hardenedRuntime": false,
    "gatekeeperAssess": false,
    "target": ["dmg", "zip"]
  },
  "win": {
    "target": [
      {
        "target": "squirrel",
        "arch": ["x64", "ia32", "arm64"]
      }
    ]
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "linux": {
    "category": "Utility",
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64", "arm64"]
      }
    ]
  }
}
