{
  "appId": "com.cmux.app",
  "productName": "Cmux",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "out/**/*",
    "package.json"
  ],
  "asar": true,
  "npmRebuild": false,
  "nodeGypRebuild": false,
  "extraResources": [
    {
      "from": "assets/cmux-logos/cmux.iconset",
      "to": "cmux-logos/cmux.iconset"
    }
  ],
  "mac": {
    "category": "public.app-category.developer-tools",
    "icon": "build/icon.icns",
    "hardenedRuntime": false,
    "gatekeeperAssess": false,
    "target": ["dmg", "zip"]
  },
  "win": {
    "icon": "build/icon.ico",
    "target": ["nsis", "zip"]
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  }
}
