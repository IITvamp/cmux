{
  "appId": "com.cmux.app",
  "productName": "Cmux",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "out/**/*",
    "package.json"
  ],
  "asar": true,
  "publish": [
    {
      "provider": "github",
      "owner": "manaflow-ai",
      "repo": "cmux"
    }
  ],
  "mac": {
    "category": "public.app-category.developer-tools",
    "icon": "build/icon.icns",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.inherit.plist",
    "target": ["dmg", "zip"]
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  }
  ,
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ]
  },
  "nsis": {
    "oneClick": true,
    "perMachine": false,
    "allowToChangeInstallationDirectory": false
  },
  "linux": {
    "category": "Utility",
    "target": ["AppImage", "deb"]
  }
}
