{
  "name": "coderouter-extension",
  "displayName": "Coderouter Extension",
  "description": "Coderouter VS Code Extension",
  "version": "0.0.1",
  "publisher": "coderouter",
  "repository": {
    "type": "git",
    "url": "https://github.com/coderouter/coderouter"
  },
  "engines": {
    "vscode": "^1.101.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "coderouter.helloWorld",
        "title": "Coderouter: Hello World"
      },
      {
        "command": "coderouter.run",
        "title": "Coderouter: Run"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "bun run compile-bun",
    "compile-bun": "bun build src/extension.ts --target node --outdir ./out --external vscode --minify --format cjs",
    "compile-tsc": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "package": "vsce package --allow-missing-repository --no-dependencies --allow-star-activation"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.5",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^3.2.1",
    "eslint": "^8.56.0",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.6.1"
  }
}