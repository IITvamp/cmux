{
  "name": "coderouter-extension",
  "displayName": "CodeRouter Extension",
  "description": "CodeRouter VS Code Extension",
  "version": "0.0.1",
  "publisher": "coderouter",
  "repository": {
    "type": "git",
    "url": "https://github.com/coderouter/coderouter"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other"],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "coderouter.helloWorld",
        "title": "CodeRouter: Hello World"
      },
      {
        "command": "coderouter.runOpenCode",
        "title": "CodeRouter: Run OpenCode AI"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "package": "vsce package --allow-missing-repository --no-dependencies"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^3.2.1"
  }
}
