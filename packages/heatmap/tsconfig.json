{
  "compilerOptions": {
    "composite": true,
    "moduleResolution": "bundler",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.build.tsbuildinfo",
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"]
}
